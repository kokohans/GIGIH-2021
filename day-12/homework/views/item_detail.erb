<div class="container">
<table class="table">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th colspan="<%= item.categories.count if item.categories %>" scope="col">Category</th>
        <th scope="col">Action</th>
    </tr>
    <tr>
        <th scope="row"><%= item.name %></th>
        <td>Rp <%= item.price %></td>
        <% if item.categories %>
            <% item.categories.each do | category | %>
                <td><%= category.name %></td>
            <%end%>
        <%else%>
            <td>-</td>
        <%end%>
            <td>
                <div class="row">
                    <div class="col">
                        <a class="text-decoration-none" href='/items/<%= item.id%>/edit'>Edit</a>
                    </div>
                    <div class="col">
                        <a class="text-decoration-none" href='/items/<%= item.id%>/delete'>Delete</a>
                    </div>
                </div>
            </td>
    </tr>
</table>
</div>